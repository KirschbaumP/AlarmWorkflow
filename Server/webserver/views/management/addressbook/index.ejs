<% layout('../../template') %>
<% stylesheet('https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap4.min.css') %>
<% script('https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js') %>
<% script('/static/javascripts/jQueryForm.js') -%>
<% script('/static/javascripts/management/addressbook/index.js') %>

<div class="rows">
    <div class="col-md-12">
        <h1>Adressbuch</h1>
            <button class="btn  btn-success" data-toggle="modal" data-target="#createModal">Hinzuf&uuml;gen</button>
        <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Nachname</th>
                <th>Vorname</th>
                <th></th>
            </tr>
            </thead>
        </table>
    </div>

</div>




<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Kontakt hinzuf&uuml;gen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createForm" method="post" action="/management/addressbook/create">
                    <div class="form-group row">
                        <label for="createInputvorname" class="col-sm-4 col-form-label">Vorname</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="createInputvorname" placeholder="Vorname" name="vorname" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="createInputnachname" class="col-sm-4 col-form-label">Nachname</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="createInputnachname" placeholder="Nachname" name="nachname" required>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Schlie√üen</button>
                <button type="button" class="btn btn-primary" id="saveCreate">Kontakt speichern</button>
            </div>
        </div>
    </div>
</div>